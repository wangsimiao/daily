//浅拷贝
function copy(obj) {
  var child = {}
  for (var key in obj) {
    child[key] = obj[key]
  }
  return child
}

//深层拷贝
function deepCopy(obj) {
  var child
  var MytoString = Object.prototype.toString.call(obj)
  switch (MytoString) {
    case '[object Null]'||'[object String]'||'[object Number]'||'[object Boolean]'||'[object Date]'||'[object Function]':
      child = obj
      break;
    case '[object Array]':
      obj.map(function (item) {
        return deepCopy(item)
      })
      break;
    case '[object Object]':
      child = {}
      for (var key in obj) {
        child[key] = deepCopy(obj[key])
      }
      break;
    default:
      child = obj;
      break;
  }
  return child;
}

var old = 1;
var nold = copy(old);
var deepold = deepCopy(old);
old=2
console.log(old);
console.log(nold);
console.log(deepold);
